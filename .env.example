# Environment variables for Kahook
# Copy this file to .env and update values

# Server Configuration
SERVER_PORT=8080

# Authentication is configured via config.yaml (mounted at runtime).
# Set AUTH_TYPE to override the config file value:
# AUTH_TYPE=basic   — requires users in config.yaml
# AUTH_TYPE=bearer  — requires tokens in config.yaml
# AUTH_TYPE=none    — no authentication (default, not recommended for production)

# Kafka Configuration - Local
KAFKA_BROKERS=localhost:9092

# Kafka Configuration - Confluent Cloud
# KAFKA_BROKERS=pkc-xxxxx.us-east-1.aws.confluent.cloud:9092
# KAFKA_SASL_USERNAME=your-api-key
# KAFKA_SASL_PASSWORD=your-api-secret
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SECURITY_PROTOCOL=SASL_SSL

# Kafka Producer Settings
KAFKA_ACKS=all
KAFKA_RETRIES=5
KAFKA_COMPRESSION_TYPE=snappy
